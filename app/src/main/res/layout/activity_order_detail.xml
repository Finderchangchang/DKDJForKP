<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical">

    <net.tsz.afinal.view.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorbai"
        app:center_tv="订单" />

    <LinearLayout
        android:id="@+id/od_title"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/title_bar"
        android:background="@color/colorbai"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/order_state_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单已取消" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="其他原因"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/od_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/od_title"
        android:layout_marginTop="10dp"
        android:background="@color/colorbai"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单编码"
                android:textColor="@color/orderzihui" />

            <TextView
                android:id="@+id/od_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="kp5646134574"
                android:textColor="@color/colormytitle2zi" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下单时间"
                android:textColor="@color/orderzihui" />

            <TextView
                android:id="@+id/od_createtime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="2016-11-29 15:15:40"
                android:textColor="@color/colormytitle2zi" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发货地址"
                android:textColor="@color/orderzihui" />

            <TextView
                android:id="@+id/od_fa_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="桥湾地铁站"
                android:textColor="@color/colormytitle2zi" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收货地址"
                android:textColor="@color/orderzihui" />

            <TextView
                android:id="@+id/od_shou_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="北海公园1号楼1单元101"
                android:textColor="@color/colormytitle2zi" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发货电话"
                android:textColor="@color/orderzihui" />

            <TextView
                android:id="@+id/od_fa_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="kp5646134574"
                android:textColor="@color/colormytitle2zi" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收货电话"
                android:textColor="@color/orderzihui" />

            <TextView
                android:id="@+id/od_shou_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="kp5646134574"
                android:textColor="@color/colormytitle2zi" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单金额"
                android:textColor="@color/orderzihui" />

            <TextView
                android:id="@+id/od_totalmoney"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="kp5646134574"
                android:textColor="@color/colormytitle2zi" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单里程"
                android:textColor="@color/orderzihui" />

            <TextView
                android:id="@+id/od_juli"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="kp5646134574"
                android:textColor="@color/colormytitle2zi" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="物品类型"
                android:textColor="@color/orderzihui" />

            <TextView
                android:id="@+id/od_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="kp5646134574"
                android:textColor="@color/colormytitle2zi" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单内容"
                android:textColor="@color/orderzihui" />

            <TextView
                android:id="@+id/od_content_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="kp5646134574"
                android:textColor="@color/colormytitle2zi" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>